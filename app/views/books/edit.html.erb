<header>
<h1>Editing Book</h1>

<%= form_with model: @book, url:'/books', local:true do |f| %>
  <% if @book.errors.any? %>
    <div class= "error_explanation">
      <h2>errors prohibited this obj from being saved:</h2>
        <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
  <% end %>
<% end %>


<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <div class="action">
  <%= f.submit 'Update Book' %>
  </div>
  <%= link_to 'Show', book_path %>|<%= link_to "back", books_path %>
  <% end %>
</header>